/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@keyframes spin {
	from {
		transform: rotate(0deg);
	}
	to {
		transform: rotate(360deg);
	}
}

/* Apply the animation to the SVG element */
.loading {
	animation: spin 2s backwards infinite;
}

.loading-bar {
	transition: 1s;
}
